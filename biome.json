{
  "$schema": "https://biomejs.dev/schemas/1.3.0/schema.json",
  "files": {
    "ignore": [".yarn", ".pnp.*", "package.json", ".vscode/extensions.json", "kubeflake.*js", "kubeflake.d.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 180,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
