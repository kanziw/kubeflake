{
  "name": "@kanziw/kubeflake",
  "version": "0.0.1",
  "type": "module",
  "description": "Sonyflake + pod hostname as machine id",
  "license": "MIT",
  "homepage": "https://github.com/kanziw/kubeflake",
  "keywords": [
    "sonyflake",
    "kubernetes"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kanziw/kubeflake.git"
  },
  "maintainers": [
    {
      "email": "kanziwoong@gmail.com",
      "name": "Jiwoong Jung"
    }
  ],
  "exports": {
    ".": "./kubeflake.js"
  },
  "publishConfig": {
    "access": "public",
    "type": "commonjs",
    "main": "./kubeflake.cjs",
    "types": "./kubeflake.d.ts",
    "exports": {
      ".": {
        "types": "./kubeflake.d.ts",
        "import": "./kubeflake.js",
        "require": "./kubeflake.cjs"
      },
      "./package.json": "./package.json"
    }
  },
  "files": [
    "/kubeflake.js",
    "/kubeflake.cjs",
    "/kubeflake.d.ts"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "node scripts/build-exports.js && tsc -p tsconfig.build.json",
    "test": "vitest",
    "format": "biome check --apply .",
    "publish": "yarn build && yarn publish-if-not-published",
    "publish:rc": "yarn build && yarn publish-if-not-published --no-tag-check -- --tag rc"
  },
  "dependencies": {
    "sonyflake-js": "1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@types/node": "^20.12.7",
    "esbuild": "^0.20.2",
    "publish-if-not-published": "^3.1.3",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "packageManager": "yarn@4.1.1"
}
